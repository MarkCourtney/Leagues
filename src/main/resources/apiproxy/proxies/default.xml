<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>SpikeArrest</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="GetLeagueTeams">
            <Request>
                <Step>
                    <Name>ExtractVariables.LeagueName</Name>
                </Step>
                <Step>
                    <Name>ServiceCallout.PremierLeague2016</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>ExtractVariables.GetStandings</Name>
                </Step>
                <Step>
                    <Name>JavaScript.ExtractParams</Name>
                </Step>
                <Step>
                    <Name>AssignMessage.SetLeagueTableResponse</Name>
                </Step>
            </Response>
            <Condition>(request.verb == "GET" and request.uri ~/ "/football/leagues/*/seasons/*")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/football</BasePath>
        <Properties/>
        <VirtualHost>secure</VirtualHost>
        <VirtualHost>default</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="GoNowhere"/>
</ProxyEndpoint>